{
  "name": "@sc3d/nancy",
  "description": "Simple templating system",
  "version": "7.0.7",
  "author": "Reuben Thomas",
  "bin": {
    "nancy": "./bin/run.js"
  },
  "bugs": "https://github.com/rrthomas/nancy/issues",
  "dependencies": {
    "argparse": "^2.0.1",
    "debug": "^4.3.4",
    "execa": "^6.1.0",
    "fs-extra": "^10.0.1",
    "strip-final-newline": "^3.0.0",
    "tslib": "^2.3.1",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "@aweary/alder": "^2.0.0",
    "@tsconfig/node16": "^1.0.2",
    "@types/argparse": "^2.0.10",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/which": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "c8": "^7.11.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "depcheck": "^1.4.3",
    "dir-compare": "^4.0.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.3",
    "eslint-plugin-import": "^2.25.4",
    "linkinator": "^3.0.3",
    "mocha": "^9.2.2",
    "open-cli": "^7.0.1",
    "pre-push": "^0.1.2",
    "tempy": "^2.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": "^16.0.0"
  },
  "files": [
    "Cookbook.md",
    "/bin/run.js",
    "/lib"
  ],
  "homepage": "https://github.com/rrthomas/nancy",
  "license": "GPL-3.0-or-later",
  "main": "lib/index.js",
  "repository": "rrthomas/nancy",
  "scripts": {
    "lint": "eslint . --ext .ts && depcheck",
    "prebuild": "node --print \"'export default \\'' + require('./package.json').version + '\\';'\" > src/version.ts",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "prepare": "npm run clean && npm run build && npm run docs",
    "test": "npm run build && mocha --forbid-only \"test/**/*.test.ts\"",
    "coverage": "NODE_ENV=coverage c8 --extension .ts npm test",
    "loc": "cloc src/*.ts",
    "diff-check": "git diff --exit-code",
    "prepublishOnly": "npm run diff-check && git push --all",
    "postpublish": "git push --tags && hub release create $(git describe) -m 'Release $(git describe)'",
    "example": "open-cli file://$(pwd)/test/cookbook-example-website-expected/index/index.html",
    "docs": "./bin/test-run.js README.nancy.md README.md && ./bin/test-run.js Cookbook.nancy.md Cookbook.md"
  },
  "pre-push": [
    "lint",
    "test",
    "docs",
    "diff-check"
  ],
  "type": "module",
  "types": "lib/*.d.ts"
}
